<Page x:Class="MalangDiary.Views.MdfDiaryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="clr-namespace:MalangDiary.ViewModels"
      xmlns:helpers="clr-namespace:MalangDiary.Helpers"
      d:DataContext="{d:DesignInstance Type=viewmodels:MdfDiaryViewModel}"
      mc:Ignorable="d"
      Background="#FFFEFD"
      d:DesignHeight="800" d:DesignWidth="400">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="EmotionDeleteStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#FFACAC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#FFFFF5F5"/>
        </Style>

        <Style TargetType="Line" x:Key="NoteLineStyle">
            <Setter Property="Stroke" Value="#FFDADADA"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="X1" Value="10"/>
            <Setter Property="X2" Value="370"/>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Tag" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RedOutlineButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FFACAC"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="CreamButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Foreground" Value="#FFACAC"/>
            <Setter Property="Background" Value="#FFF9F5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="PhotoAttachButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Foreground" Value="#FFACAC"/>
            <Setter Property="Background" Value="#FFF9F5"/>
            <Setter Property="BorderBrush" Value="#FFACAC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Width="400" Height="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Background="#FFACAC" Grid.Row="0" LastChildFill="True">
            <Button Content="&lt;" Command="{Binding GoToHomeCommand}"
                    Width="40" Background="Transparent" BorderThickness="0"
                    FontSize="18" Foreground="White" DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="0,0,10,0">
                <Button Content="다시 녹음"
                        Command="{Binding RecAgainCommand}"
                        Width="80" Height="28" Margin="5"
                        Style="{StaticResource RedOutlineButtonStyle}"
                        Tag="15"/>
                <Button Content="저장"
                        Command="{Binding SaveDiaryCommand}"
                        Width="80" Height="28" Margin="5"
                        Style="{StaticResource CreamButtonStyle}"
                        Tag="15"/>
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0" Padding="0" Margin="10" Height="708">
                <StackPanel Margin="0">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="377">
                        <Button Content="날짜" Width="60" Height="31" Background="White" Foreground="Black" BorderBrush="Gray"/>
                        <Button Content="오늘 날짜" Width="156" Height="31" Background="White" Foreground="Black" BorderBrush="Gray"/>
                        <Button Content="날씨" Width="60" Height="31" Background="White" Foreground="Black" BorderBrush="Gray"/>
                        <Border CornerRadius="0" BorderBrush="Gray" BorderThickness="1">
                            <ComboBox Width="100" Height="30" FontSize="13"
                                  ItemsSource="{Binding WeatherList}"
                                  SelectedItem="{Binding SelectedWeather, Mode=TwoWay}"
                                  BorderBrush="Gray"
                                  VerticalContentAlignment="Center" />  
                        </Border>
                    </StackPanel>

                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0" Background="#FFFFFCFC" Height="256">
                        <StackPanel>
                            <Image Source="{Binding PhotoPreview}"
                                   Width="377" Height="254"
                                   Stretch="UniformToFill"/>

                            <Button Content="사진첨부"
                                    Width="150" Height="40" Margin="0,-250,0,10"
                                    Command="{Binding UploadImageCommand}"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource PhotoAttachButtonStyle}"
                                    Tag="20"
                                    Visibility="{Binding IsImageAttached, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"/>

                            <TextBlock Text="{Binding PhotoFileName}" FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>

                            <ItemsControl ItemsSource="{Binding EmotionList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center" Width="374"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource EmotionDeleteStyle}" CornerRadius="13" Height="26">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding}" Foreground="#FFACAC" FontWeight="Bold" Margin="5,0"/>
                                                <TextBlock Text="✕" Foreground="#FFACAC" FontWeight="Bold" Margin="0,0,5,0" Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <DockPanel Margin="0" LastChildFill="True">
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0" Padding="5">
                            <TextBlock Text="제목:" FontWeight="Bold" VerticalAlignment="Center"/>
                        </Border>
                        <TextBox Text="{Binding Title, Mode=TwoWay}" BorderBrush="Gray" BorderThickness="1" Height="29"
                                 VerticalContentAlignment="Center"/>
                    </DockPanel>

                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0" Margin="0" MinHeight="390">
                        <Grid>
                            <Canvas IsHitTestVisible="False">
                                <Line Style="{StaticResource NoteLineStyle}" Y1="28" Y2="28"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="56" Y2="56"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="84" Y2="84"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="112" Y2="112"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="140" Y2="140"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="168" Y2="168"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="196" Y2="196"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="224" Y2="224"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="252" Y2="252"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="280" Y2="280"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="308" Y2="308"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="336" Y2="336"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="364" Y2="364"/>
                            </Canvas>
                            <TextBox Text="{Binding RefinedText, Mode=TwoWay}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Padding="10"
                                     FontSize="15"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Noto Sans KR"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
