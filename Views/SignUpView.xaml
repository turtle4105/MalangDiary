<Page x:Class="MalangDiary.Views.SignUpView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="clr-namespace:MalangDiary.ViewModels"
      xmlns:helpers="clr-namespace:MalangDiary.Helpers"
      mc:Ignorable="d"
      Background="#FFFEFD"
      Width="400" Height="800"
      d:DataContext="{d:DesignInstance Type=viewmodels:SignUpViewModel}">

    <Page.Resources>
        <!-- ✅ TextBox용 회색 워터마크 + 검정 입력 텍스트 스타일 -->
        <Style x:Key="GrayWatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Background="{TemplateBinding Background}"
                                          Foreground="{TemplateBinding Foreground}" />
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="Gray"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.Length,
                                                    RelativeSource={RelativeSource TemplatedParent},
                                                    Converter={StaticResource ZeroToVisibleConverter}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="30*" />
            <RowDefinition Height="300*" />
        </Grid.RowDefinitions>

        <!-- 뒤로가기 버튼 -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,0,0,0"
                    Grid.Row="0">
            <Button Content="&lt;"
                    Command="{Binding GoBackCommand}"
                    Width="40" Height="40"
                    FontSize="17"
                    FontWeight="Bold"
                    Foreground="Black"
                    Background="Transparent"
                    BorderBrush="Transparent"/>
        </StackPanel>

        <!-- 로고 -->
        <Image Source="/Resources/Images/logo/malang_logo.png"
               Width="200"
               HorizontalAlignment="Center"
               Grid.Row="1"/>

        <!-- 설명 -->
        <TextBlock Text="말랑일기와 함께 기록의 여행을 시작해요"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="#2A2A2A"
                   HorizontalAlignment="Center"
                   Grid.Row="2"
                   FontFamily="Noto Sans KR" Width="232" />

        <!-- 입력 폼 및 버튼 -->
        <StackPanel Grid.Row="3"
                    Margin="20,10,20,0"
                    VerticalAlignment="Top">

            <!-- 이름 -->
            <Border CornerRadius="26" 
                    Background="#FFF9F0" 
                    BorderBrush="#FFE6E6"
                    BorderThickness="1" 
                    Margin="0,0,0,10">
                <TextBox Text="{Binding Name}"
                         Tag="이름"
                         Style="{StaticResource GrayWatermarkTextBoxStyle}"
                         Foreground="#2A2A2A"
                         FontSize="12"
                         FontFamily="Noto Sans KR"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Height="52"/>
            </Border>

            <!-- 이메일 -->
            <Border CornerRadius="26"
                    Background="#FFF9F0"
                    BorderBrush="#FFE6E6"
                    BorderThickness="1"
                    Margin="0,0,0,10">
                <TextBox Text="{Binding Email}"
                         Tag="아이디"
                         Style="{StaticResource GrayWatermarkTextBoxStyle}"
                         Foreground="#2A2A2A"
                         FontSize="12"
                         FontFamily="Noto Sans KR"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Height="52" TextChanged="TextBox_TextChanged" />
            </Border>

            <!-- 비밀번호 -->
            <Border CornerRadius="26" 
                    Background="#FFF9F0" 
                    BorderBrush="#FFE6E6" 
                    BorderThickness="1" 
                    Margin="0,0,0,10">
                <Grid>
                    <PasswordBox 
                        helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                        Style="{StaticResource FlatPasswordBoxStyle}"
                        Foreground="#2A2A2A"
                        Background="Transparent"
                        FontSize="12"
                        FontFamily="Noto Sans KR"
                        Padding="10"
                        VerticalContentAlignment="Center"
                        PasswordChar="●"
                        Height="52" />

                    <TextBlock Text="비밀번호"
                               Foreground="Gray"
                               FontSize="12"
                               FontFamily="Noto Sans KR"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Password, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                </Grid>
            </Border>

            <!-- 휴대전화 -->
            <Border CornerRadius="26" 
                    Background="#FFF9F0" 
                    BorderBrush="#FFE6E6" 
                    BorderThickness="1" 
                    Margin="0,0,0,25">
                <TextBox Text="{Binding Phone}"
                         Tag="휴대전화"
                         Style="{StaticResource GrayWatermarkTextBoxStyle}"
                         Foreground="#2A2A2A"
                         FontSize="12"
                         FontFamily="Noto Sans KR"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Height="52" />
            </Border>

            <!-- 회원가입 버튼 -->
            <Button Content="회원가입"
                    Command="{Binding SignUpCommand}"
                    Foreground="White"
                    Background="#FFACAC"
                    FontSize="17"
                    FontFamily="Noto Sans KR Medium"
                    BorderThickness="0"
                    MinHeight="52"
                    Margin="0,12,0,40" 
                    VerticalContentAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="26">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- 로그인 유도 문구 -->
            <Button Command="{Binding GoToLogInCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <TextBlock HorizontalAlignment="Center" FontSize="13" FontFamily="Noto Sans KR">
                    <Run Text="이미 계정이 있나요? " Foreground="#A7A7A7" />
                    <Run Text="로그인" Foreground="#FFACAC" TextDecorations="Underline" Cursor="Hand"/>
                </TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
