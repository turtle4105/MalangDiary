<Page x:Class="MalangDiary.Views.ChkDiaryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local ="clr-namespace:MalangDiary.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="400"
      Background="#FFFEFD">

    <Page.Resources>


        <!-- 감정 삭제 버튼 스타일 -->
        <Style x:Key="EmotionDeleteStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#FFACAC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#FFFFF5F5"/>
        </Style>

        <!-- 줄 스타일 -->
        <Style TargetType="Line" x:Key="NoteLineStyle">
            <Setter Property="Stroke" Value="#FFDADADA"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="X1" Value="10"/>
            <Setter Property="X2" Value="370"/>
        </Style>

        <!-- 둥근 테두리 버튼 스타일 (조절 가능) -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Tag" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 다시 녹음 버튼 스타일 -->
        <Style x:Key="RedOutlineButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FFACAC"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 저장 버튼 스타일 -->
        <Style x:Key="CreamButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Foreground" Value="#FFACAC"/>
            <Setter Property="Background" Value="#FFF9F5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- 사진첨부 버튼 스타일 -->
        <Style x:Key="PhotoAttachButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Foreground" Value="#FFACAC"/>
            <Setter Property="Background" Value="#FFF9F5"/>
            <Setter Property="BorderBrush" Value="#FFACAC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Width="400" Height="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 바 -->
        <DockPanel Background="#FFACAC" Grid.Row="0" LastChildFill="True">
            <!-- 좌측 뒤로가기 버튼 -->
            <Button Content="&lt;" Command="{Binding GoBackCommand}"
            Width="40" Background="Transparent" BorderThickness="0"
            FontSize="18" Foreground="White" DockPanel.Dock="Left"/>

            <!-- 오른쪽 아이콘 버튼 3개: 재생 / 공유 / 닫기 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="0,0,10,0">

                <!-- Restart -->
                <Button Command="{Binding StopAudioCommand}"
                        Width="32" Height="32" Margin="4"
                        Style="{StaticResource RoundedButtonStyle}" Tag="16"
                        Background="#FFF9F5" BorderBrush="#FFACAC" BorderThickness="1">
                    <TextBlock Text="■" FontSize="14" Foreground="#FFACAC" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,3"/>
                </Button>
                <!-- Play & Pause -->
                <Button Width="32" Height="32"
                        Command="{Binding PlayPauseCommand}"
                        Style="{StaticResource RoundedButtonStyle}"
                        Background="#FFF9F5"
                        BorderBrush="#FFACAC"
                        BorderThickness="1">
                    <TextBlock Text="{Binding IsPlaying, Converter={StaticResource PlayPauseTextConverter}}"
                               FontSize="14"
                               Foreground="#FFACAC"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="2,0,0,3"/>
                </Button>

                <!-- 공유 버튼 -->
                <Button Command="{Binding ShareDiaryCommand}"
                Content="공유하기" FontFamily="Noto Sans KR"
                Width="90" Height="32" Margin="4"
                Style="{StaticResource RoundedButtonStyle}" Tag="16"
                Background="#FFF9F5" BorderBrush="#FFACAC" Foreground="#FFACAC" BorderThickness="1"/>

                <!-- 삭제하기(X) 버튼 -->
                <Button Command="{Binding DeleteDiaryCommand}"
                Width="32" Height="32" Margin="4"
                Style="{StaticResource RoundedButtonStyle}" Tag="16"
                Background="#FFD3D3" BorderBrush="Transparent">
                    <TextBlock Text="✕" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                </Button>
            </StackPanel>
        </DockPanel>



        <!-- 본문 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0" Padding="0" Margin="10" Height="708">

                <StackPanel Margin="0">

                    <!-- 날짜 선택 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="377">
                        <Border Background="Transparent" BorderBrush="Gray" BorderThickness="1" Width="60" Height="31">
                            <TextBlock Text="날짜" Background="Transparent" Foreground="Black" FontFamily="Noto Sans KR" HorizontalAlignment="Center"
                                       TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"
                                       FontSize="14"/>
                        </Border>
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1"
                                Width="156" Height="31">
                            <TextBlock Text="{Binding DateText}" Background="Transparent" Foreground="Black" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Noto Sans KR"
                                       FontSize="14"/>
                        </Border>
                        <Border Width="60" Height="31" Background="Transparent" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Text="날씨" Background="Transparent" Foreground="Black" FontFamily="Noto Sans KR"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="14"/>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="1" Width="101" Height="31" VerticalAlignment="Center">
                            <TextBlock Text="{Binding WeatherText}" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontFamily="Noto Sans KR"
                                   FontSize="14"/>
                        </Border>

                    </StackPanel>

                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0" Background="#FFFFFCFC" Height="256">
                        <Grid>
                            <!-- 배경 이미지 -->
                            <Image Source="{Binding ImageList[0]}" Stretch="UniformToFill" />

                            <Border Background="#FFF2CC"
                                    Width="30" Height="30"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="10"
                                    CornerRadius="15">

                                <Button Command="{Binding ChangeIsLikedCommand}"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        Margin="5"
                                        Background="#FFF2CC"
                                        BorderThickness="0"
                                        ToolTip="좋아요 토글">
                                    <Image Source="/Resources/Images/Icons/heart.png">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Opacity" Value="0.4"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                                        <Setter Property="Opacity" Value="1.0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button>

                            </Border>


                            <!-- 하단 그라디언트 + 감정 태그 -->
                            <Grid VerticalAlignment="Bottom" Height="60">
                                <!-- 검은색 그라디언트 배경 -->
                                <Rectangle Height="60">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00000000" Offset="0.0" />
                                            <GradientStop Color="#AA000000" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!-- 감정 태그 -->
                                <ItemsControl ItemsSource="{Binding EmotionList}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center" 
                                                       Margin="10"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="4" Padding="8,3" BorderBrush="#FFFFFF" BorderThickness="1.3"
                                                Background="Transparent" CornerRadius="13">
                                                <TextBlock Text="{Binding ., StringFormat='# {0}'}"
                                                           Foreground="#FFFFFF" FontWeight="Bold"
                                                           FontFamily="Noto Sans KR" FontSize="13"/>
                                            </Border>
                                        </DataTemplate> 
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>





                    <!-- 제목 -->
                    <DockPanel Margin="0" LastChildFill="True">
                        <Border BorderBrush="Gray" Width="60"  BorderThickness="1" CornerRadius="0" Padding="5">
                            <TextBlock Text="제목" FontWeight="Bold" VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontFamily="Noto Sans KR"
                                       FontSize="13"/>
                        </Border>
                        <Border BorderBrush="Gray"
                                BorderThickness="1"
                                Height="31">
                        <TextBlock Text="{Binding TitleText}" 
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontFamily="Noto Sans KR"
                                   />
                        </Border>
                    </DockPanel>

                    <!-- 본문 내용 -->
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0" Margin="0" MinHeight="390">
                        <Grid>
                            <Canvas IsHitTestVisible="False">
                                <!-- 줄 생성 (Line) -->
                                <Line Style="{StaticResource NoteLineStyle}" Y1="28" Y2="28"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="56" Y2="56"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="84" Y2="84"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="112" Y2="112"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="140" Y2="140"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="168" Y2="168"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="196" Y2="196"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="224" Y2="224"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="252" Y2="252"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="280" Y2="280"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="308" Y2="308"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="336" Y2="336"/>
                                <Line Style="{StaticResource NoteLineStyle}" Y1="364" Y2="364"/>
                            </Canvas>
                            <TextBlock Text="{Binding DiaryText}"
                                 TextWrapping="Wrap"
                                 Padding="10"
                                 FontSize="15"
                                 Background="Transparent"
                                 FontFamily="Noto Sans KR"
                                 LineHeight="28"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

        </ScrollViewer>
    </Grid>
</Page>
