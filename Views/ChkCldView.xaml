<Page x:Class="MalangDiary.Views.ChkCldView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:MalangDiary.Helpers"
      Background="#FFFEFD"
      Width="400"
      Height="800">

    <Page.Resources>
        <!-- Boolean → Visibility -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid Width="400" Height="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- 상단 바 -->
            <RowDefinition Height="40"/>
            <!-- 탭 버튼 -->
            <RowDefinition Height="40"/>
            <!-- 월 표시 -->
            <RowDefinition Height="40"/>
            <!-- 요일 -->
            <RowDefinition Height="*"/>
            <!-- 달력 -->
        </Grid.RowDefinitions>

        <!-- 뒤로가기 버튼 -->
        <DockPanel Grid.Row="0" Background="#FFACAC">
            <Button Content="&lt;" Width="40"
                    Command="{Binding GoBackCommand}"
            Background="Transparent" BorderThickness="0"
            FontSize="16" Foreground="White"
            DockPanel.Dock="Left" HorizontalAlignment="Left"/>
        </DockPanel>


        <!-- 탭 버튼 -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Background="#FFF9D9DC">
            <Button Content="달력" Width="200" Height="40" Background="#FFF9D9DC" BorderThickness="0" FontWeight="Bold"/>
            <Button Content="사진" Width="200" Height="40" Background="Transparent" BorderThickness="0" Foreground="Gray"/>
        </StackPanel>

        <!-- 월 표시 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <!-- 이전 달 -->
            <Button Content="&lt;" Grid.Column="0"
            Command="{Binding PreviousMonthCommand}"
            Background="Transparent" BorderThickness="0" FontSize="16"/>

            <!-- 현재 월 -->
            <TextBlock Text="{Binding CurrentMonthText}"
               Grid.Column="1"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontWeight="Bold"/>

            <!-- 다음 달 -->
            <Button Content="&gt;" Grid.Column="2"
            Command="{Binding NextMonthCommand}"
            Background="Transparent" BorderThickness="0" FontSize="16"/>
        </Grid>


        <!-- 요일 헤더 -->
        <UniformGrid Grid.Row="3" Columns="7">
            <TextBlock Text="일" HorizontalAlignment="Center" Foreground="Red"/>
            <TextBlock Text="월" HorizontalAlignment="Center"/>
            <TextBlock Text="화" HorizontalAlignment="Center"/>
            <TextBlock Text="수" HorizontalAlignment="Center"/>
            <TextBlock Text="목" HorizontalAlignment="Center"/>
            <TextBlock Text="금" HorizontalAlignment="Center"/>
            <TextBlock Text="토" HorizontalAlignment="Center" Foreground="Blue"/>
        </UniformGrid>

        <!-- 달력 날짜 -->
        <ItemsControl Grid.Row="4" ItemsSource="{Binding Days}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.DayClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                CommandParameter="{Binding}"
                Background="Transparent"
                BorderThickness="0"
                Padding="0"
                >
                        <Border BorderBrush="#FFE0E0E0" BorderThickness="1"
                    CornerRadius="1" Background="White">
                            <Grid Width="110" Height="110">
                                <!-- 날짜 텍스트 -->
                                <TextBlock Text="{Binding DayText}" 
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="2,1,0,0" 
                               FontSize="12"
                               Foreground="Black"
                               FontWeight="SemiBold" />

                                <!-- 좋아요 하트 -->
                                <Image Source="/Resources/Images/Icons/baby_icon_resized_70.png"
                           Width="14" Height="14"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="4"
                           Visibility="{Binding HasLike, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>


            <!-- 아래 여백 -->
            <ItemsControl.Margin>
                <Thickness Bottom="80"/>
            </ItemsControl.Margin>
        </ItemsControl>

    </Grid>
</Page>
