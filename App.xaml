<Application x:Class="MalangDiary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MalangDiary.Helpers"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <!-- ShadowEffect 정의 추가 -->
        <DropShadowEffect x:Key="ShadowEffect" Color="#A7A7A7" ShadowDepth="1" />

        <!-- 컨버터 등록 -->
        <local:BoolToVisibilityConverter        x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisConverter        x:Key="InverseBoolToVis"/>
        <local:SelectedChildBorderConverter     x:Key="SelectedChildBorderConverter"/>
        <local:HtmlColorToBrushConverter        x:Key="HtmlColorToBrushConverter" />
        <local:IntToVisibilityConverter         x:Key="ZeroToVisibleConverter" />
        <local:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />
        <local:PlayPauseTextConverter           x:Key="PlayPauseTextConverter"/>
        <local:WritedToBackgroundConverter      x:Key="WritedToBackgroundConverter"/>
        <local:HeartImageConverter              x:Key="HeartImageConverter"/>


        <!-- ChkDiary - Play&Pause Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- 회색 Watermark 스타일 (회원가입 등) -->
        <Style x:Key="GrayWatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Background="{TemplateBinding Background}"
                                          Foreground="{TemplateBinding Foreground}" />
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Margin="10,0,0,0"
                                       FontFamily="Noto Sans KR"
                                       VerticalAlignment="Center"
                                       Foreground="#2A2A2A"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.Length,
                                            RelativeSource={RelativeSource TemplatedParent},
                                            Converter={StaticResource ZeroToVisibleConverter}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <!-- 핑크색 Watermark 스타일 (로그인 전용) -->
        <Style x:Key="PinkWatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#2A2A2A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Background="{TemplateBinding Background}"
                                          Foreground="{TemplateBinding Foreground}" />
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="#FFACAC"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.Length,
                                            RelativeSource={RelativeSource TemplatedParent},
                                            Converter={StaticResource ZeroToVisibleConverter}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <!-- PasswordBox 스타일: 파란 테두리 제거 -->
        <Style x:Key="FlatPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Background="{TemplateBinding Background}"
                                      Padding="{TemplateBinding Padding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
